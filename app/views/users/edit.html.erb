<%= form_for @user do |form| %>


<div class="form-group">
  <h3>تعديل معلومات المشترك</h3>
</div>

<div class="form-group">
  <%= form.label "البريد الالكتروني", class: 'exampleInputEmail1' %>
  <%= form.text_field :email, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "الاسم", class: 'exampleInputEmail1' %>
  <%= form.text_field :first_name, class: 'form-control'%>
</div>

<div class="form-group">
  <%= form.label "الكنية", class: 'exampleInputEmail1' %>
  <%= form.text_field :last_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label "الجنس", class: 'exampleInputEmail1' %>
  <%= form.radio_button :gender, "ذكر" %>
  <%= form.label :gender, "ذكر" %>
  <%= form.radio_button :gender, "أنثى" %>
  <%= form.label :gender, "أنثى" %>
</div>

<div class="form-group">
  <%= form.label "تاريخ الميلاد", class: 'exampleInputEmail1' %>
  <%= form.text_field :birthday, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "المستوى التعليمي", class: 'exampleInputEmail1' %>
  <%= form.text_field :education_level, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "التخصص", class: 'exampleInputEmail1' %>
  <%= form.text_field :specialization, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "رقم الموبايل", class: 'exampleInputEmail1' %>
  <%= form.text_field :mobile, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "العنوان الحالي", class: 'exampleInputEmail1' %>
  <%= form.text_field :current_address, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "اللغة المفضلة", class: 'exampleInputEmail1' %>
  <%= form.text_field :favorite_language, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label "نوع الكتب المفضلة", class: 'exampleInputEmail1' %>
   <%= form.select :favorite_book_type, Category.list_categories,{ include_blank: true }, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label "عن طريق من تعرف على الموقع", class: 'exampleInputEmail1' %>
  <%= form.text_field :friend_name, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "عدد النقاط", class: 'exampleInputEmail1' %>
  <%= form.text_field :points, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "عدد دورات الاستعارة", class: 'exampleInputEmail1' %>
  <%= form.text_field :borrow_times, class: 'form-control'  %>
</div>

<div class="form-group">
  <%= form.label "مجموعة الاستعارة", class: 'exampleInputEmail1' %>
  <%= form.select :borrow_group, ["A","B","C"], {}, class: "form-control"%>
</div>

<div class="form-group">
  <%= form.label "تمت الموافقة؟", class: 'exampleInputEmail1' %>
  <%= form.radio_button :approved, "true" %>
  <%= form.label :approved, "نعم" %>
  <%= form.radio_button :approved, "false" %>
  <%= form.label :approved, "لا" %>

</div>
<div class="form-group">
<%= form.submit "حفظ", class:'btn btn-primary' %>
</div>
<% end %>