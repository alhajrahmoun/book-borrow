<%= form_for @penalty do |form| %>
	<div class="form-group">
		<%= form.label :المخالفة, class: 'exampleInputEmail1' %>
		<%= form.text_field :description, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= form.label "عدد النقاط المخصومة", class: 'exampleInputEmail1' %>
		<%= form.text_field :points, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= form.label "المشترك", class: 'exampleInputEmail1' %>
		<%= form.autocomplete_field :user_id,  autocomplete_user_first_name_penalties_path, :id_element => '#penalty_user_id', class: 'form-control'  %>
	</div>

	<div class="form-group">
	  <%= form.submit "حفظ", class:'btn btn-default' %>
	</div>
<% end %>