<div class="info">
	<% unless @reviews.empty?%>
		<h3>قسم المراجعات</h3>
		<br />
		<% @reviews.each do |review|%>
			<div class="panel panel-info">
			  <div class="panel-heading">
			    <h3 class="panel-title"><h5><%= User.find(review.user_id).name%> على كتاب <%= review.book.name %> | تقييمه <%= review.rating %></h5></h3>
			  </div>
			  <div class="panel-body">
			    <h5>"<%= review.content %>"</h5>
			  </div>
			   <div class="panel-footer"><%= link_to "حذف", review_path(review), method: :delete %>
</div>
			</div>
		<% end %>
	<% end %>
</div>



				
			

